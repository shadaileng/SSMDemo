<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--数据源配置文件-->
    <properties resource="db.properties"/>
    <!--development : 开发模式-->
    <!--work : 工作模式-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${sqlite.driverClassName}"/>
                <property name="url" value="${sqlite.url}"/>
                <property name="username" value="${sqlite.username}"/>
                <property name="password" value="${sqlite.password}"/>
            </dataSource>
        </environment>
    </environments>
    <!--注册mapper-->
    <mappers>
        <!--xml文件配置mapper-->
        <mapper resource="qpf/com/orm/UserMapper_.xml"/>
        <!--注解形式配置mapper接口-->
        <!--<mapper class="qpf.com.orm.UserMapper"/>-->
    </mappers>
</configuration>